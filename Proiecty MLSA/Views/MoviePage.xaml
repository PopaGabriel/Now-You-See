<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Proiecty_MLSA.Views.MoviePage">
    <ContentPage.Content>
        <ScrollView>
            <StackLayout x:Name="MovieStack" Orientation="Vertical" Spacing="0">
                    <Frame Padding="50" Margin="0" BackgroundColor="#264653">
                        <StackLayout>
                            <Image Source="{Binding poster_path}" Aspect="AspectFill" />
                            <Label Text="{Binding title}" FontSize="20"/>
                            <StackLayout Grid.Row="1" Orientation="Vertical" HorizontalOptions="CenterAndExpand">
                            <Label x:Name="MarkLabel" FontSize="Body">
                                <Label.FormattedText>
                                    <FormattedString>
                                        <Span Text="Mark:    " />
                                        <Span Text="{Binding vote_average}"/>
                                    </FormattedString>
                                </Label.FormattedText>
                            </Label>
                            <Label x:Name="OverviewLabel" FontSize="Body">
                                <Label.FormattedText>
                                    <FormattedString>
                                        <Span Text="Overview:    "/>
                                        <Span Text="{Binding overview}"/>
                                    </FormattedString>
                                </Label.FormattedText>
                            </Label>
                        </StackLayout>
                        </StackLayout>
                    </Frame>
                    <StackLayout>
                    <Grid x:Name="Buttons" ColumnDefinitions="50*, 50*" ColumnSpacing="0" HorizontalOptions="FillAndExpand"  >
                        <Button Text="Add Movie" HorizontalOptions="Fill" VerticalOptions="Fill" Clicked="AddToUserList" Grid.Column="0" BackgroundColor="ForestGreen"/>
                        <Button Text="Remove Movie" HorizontalOptions="Fill" VerticalOptions="Fill" Clicked="RemoveFromUserList" Grid.Column="1" BackgroundColor="DarkRed"/>
                    </Grid>
                </StackLayout>
            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>